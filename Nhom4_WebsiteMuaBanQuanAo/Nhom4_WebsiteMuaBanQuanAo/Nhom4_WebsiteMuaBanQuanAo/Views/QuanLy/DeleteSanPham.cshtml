@model Nhom4_WebsiteMuaBanQuanAo.Models.SanPham

@{
    ViewBag.Title = "DeleteSanPham";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}

<div>
    <h4>Xóa sản phẩm</h4>
    <hr />
    <div class="form-horizontal" style="margin: 150px; margin-left: 600px; width: 350px; height: 550px; border: 1px solid black; border-radius: 20px; padding: 10px; padding-left: 50px;">
        <div class="form-group">
            Mã sản phẩm
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaHang)
                @Html.ValidationMessageFor(model => model.MaHang)
            </div>
        </div>

        <div class="form-group">
            Tên sản phẩm
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenHang)
                @Html.ValidationMessageFor(model => model.TenHang)
            </div>
        </div>

        <div class="form-group">
            Mã loại
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaLoai)
                @Html.ValidationMessageFor(model => model.MaLoai)
            </div>
        </div>

        <div class="form-group">
            Số lượng
            <div class="col-md-10">
                @Html.EditorFor(model => model.SLKho)
                @Html.ValidationMessageFor(model => model.SLKho)
            </div>
        </div>

        <div class="form-group">
            Đơn giá
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonGia)
                @Html.ValidationMessageFor(model => model.DonGia)
            </div>
        </div>

        <div class="form-group">
            Ảnh bìa
            <div class="col-md-10">
                @Html.EditorFor(model => model.AnhBia)
                @Html.ValidationMessageFor(model => model.AnhBia)
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                @Html.ActionLink("Quay lại", "Index", "", new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>