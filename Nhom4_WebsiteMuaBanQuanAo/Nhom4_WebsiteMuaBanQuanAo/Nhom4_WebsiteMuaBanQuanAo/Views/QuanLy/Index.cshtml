@*@model IEnumerable<Nhom4_WebsiteMuaBanQuanAo.Models.SanPham>*@
@using PagedList.Mvc;
@using PagedList;
@model IPagedList<Nhom4_WebsiteMuaBanQuanAo.Models.SanPham>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}

<h2>Trang chủ quản lý</h2>

<table class="table">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Tên loại
        </th>
        <th>
            Số lượng 
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Ảnh bìa
        </th>
        <th></th>
    </tr>
    @if (Model != null && Model.Any())
    {
        var i = 1;
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaHang</td>
                    <td>@item.TenHang</td>
                    <td>@item.MaLoai</td>
                    <td>@item.SLKho</td>
                    <td>@item.DonGia</td>
                    <td>
                        <img src="/Image/@item.AnhBia" style="width:auto;height:100px;" class="card-img-top" alt="...">
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "UpdateSanPham", new { ma = item.MaHang }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Xóa", "DeleteSanPham", new { ma = item.MaHang }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
                i++;
            }
        </tbody>
    }
</table>
<br />
<center>@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, pageSize = 10 }))</center>
