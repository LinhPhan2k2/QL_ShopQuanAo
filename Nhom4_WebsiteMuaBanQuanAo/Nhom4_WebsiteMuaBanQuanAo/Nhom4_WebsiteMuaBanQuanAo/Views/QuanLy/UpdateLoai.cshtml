@model Nhom4_WebsiteMuaBanQuanAo.Models.Loai

@{
    ViewBag.Title = "UpdateLoai";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin: 150px; margin-left: 600px; width: 350px; height: 400px; border: 1px solid black; border-radius: 20px; padding: 10px; padding-left: 50px;">
        <h4>UpdateSanPham</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.MaLoai, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaLoai)
                @Html.ValidationMessageFor(model => model.MaLoai)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenLoai, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLoai)
                @Html.ValidationMessageFor(model => model.TenLoai)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-danger" />
                @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}