@using Nhom4_WebsiteMuaBanQuanAo.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GIỎ HÀNG CỦA BẠN</h2>
<div class="card border-dark">
    <table class="table">
        <tr style="background-color: lightyellow">
            <th>MÃ HÀNG</th>
            <th>TÊN HÀNG</th>
            <th>ẢNH BÌA</th>
            <th>SỐ LƯỢNG</th>
            <th>ĐƠN GIÁ</th>
            <th>THÀNH TIỀN</th>
            <th>XÓA SẢN PHẨM</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td width="12%">@item.iMaHang</td>
                <td width="26%">@item.sTenHang</td>
                <td width="22%"><img style="width:70%;height:70%" src="~/Image/@item.sAnhBia" /></td>
                <td width="12%">@item.iSLKho</td>
                <td width="12%">@item.iDonGia</td>
                <td width="16%"></td>
                <td>
                    <div style="position:relative;width: 80px; height: 35px; border: 1px solid none; background: #d13939; border-radius: 8px; cursor: pointer;">
                        <a style="text-decoration:none; color: white; position:absolute; left: 24px; top: 4px;" href="@Url.Action("xoaGioHang", "GioHang", new { @MaSP = item.iMaHang })">Xóa</a>
                    </div>
                </td>
            </tr>
        }
        <tr style="background-color:lightyellow">
            <td colspan="3" style="color: blue; font-weight: bold; text-align: right;">Tổng cộng:</td>
            <td style="color:red; font-weight:bold;">@ViewBag.TongSoLuong</td>
            <td></td>
            <td style="color:red; font-weight:bold;">@ViewBag.TongThanhTien</td>
            <td></td>
        </tr>
    </table>
</div>
