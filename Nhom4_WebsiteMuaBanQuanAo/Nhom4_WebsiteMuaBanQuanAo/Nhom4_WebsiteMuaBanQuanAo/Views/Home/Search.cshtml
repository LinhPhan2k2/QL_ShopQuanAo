@model IEnumerable<Nhom4_WebsiteMuaBanQuanAo.Models.SanPham>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>
</head>
<body>
    <form class="d-flex" role="search" action="/Home/SanPham" name="s">
        <input class="form-control" style="width: 240px; margin: 20px;" type="text" name="s" placeholder="tìm kiếm" aria-label="Search">
        <button class="btn btn-outline-success" style="margin-top: 20px; margin-bottom:20px;" type="submit">Search</button>
    </form>

    <div id="Wrapper" class="container">
        <div id="menu">
            <br />

            <div class="row">
                <div class="container">
                    <h2 class="list-product-title" style="color: #81d8d2">Sản Phẩm Mới</h2>
                    <p class="list-product-subtitle">TODAY</p>
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        @foreach (var item in Model)
                        {
                            <div class="col">
                                <div class="card">
                                    <img src="/Image/@item.AnhBia" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.TenHang)</h5>
                                        <p class="card-text">@Html.DisplayFor(modelItem => item.DonGia)</p>
                                        @*<p>@Html.ActionLink("Xem chi tiết", "XemChiTiet", "Home", new { ma = item.MaHang }, new { @class = "btn btn-primary" })</p>*@

                                        <a href="@Url.Action("XemChiTiet", "Home", new { @ms = item.MaHang })">Xem chi tiết</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


</html>

