@model Nhom4_WebsiteMuaBanQuanAo.Models.HANG
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CHI TIẾT SẢN PHẨM</h2>

<div class="card-border-dark">
    <table class="border-dark mx-3 mb-3 mt-3">
        <tr class="text-left">
            <td rowspan="5" width="45%">
                <img class="card-header" src="@Url.Content("/Image/" + Model.ANHBIA)" width="100%" height="100%" alt="" />
            </td>
            <td style="padding-left:50px;" width="20%">Tên hàng: </td>
            <td width="35%" style="font-weight:bold; color:blue;">@Model.TENHANG</td>
        </tr>
        <tr class="text-left">
            <td style="padding-left:50px;">Tên loại hàng: </td>
            <td style="font-weight:bold; color:blue;">@Model.LOAI.TENLOAI</td>
        </tr>
        <tr class="text-left">
            <td style="padding-left:50px;">số lượng: </td>
            <td class="text-justify">@Model.SLKHO</td>
        </tr>
        <tr class="text-left">
            <td style="padding-left:50px;">giá bán: </td>
            @*@string.Format("(0:0,0)", @Model.GiaBan)*@
            <td style="font-weight:bold; color:red;">@Model.DONGIA VNĐ</td>
        </tr>
        <tr>
            <td style="padding-left:50px; text-decoration: none;">
                <a style="text-decoration: none;" href="@Url.Action("ThemGioHang", "GioHang", new { @mh = Model.MAHANG , @strURL = Request.Url.ToString()})">
                    <input type="submit" value="MUA NGAY" class="btn btn-primary" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </a>

                <a href="@Url.Action("SanPham", "Home", new { @mh = Model.MAHANG, @strURL = Request.Url.ToString() })">
                    <input type="submit" value="MUA TIẾP" class="btn btn-primary" />
                </a>
            </td>
        </tr>
    </table>
</div>